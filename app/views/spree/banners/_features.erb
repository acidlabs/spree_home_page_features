<% features = Spree::Banner.published %>

<% if features.any? %>
  <!-- Carrusel -->
  <div id="carousel-casa-amarilla" class="carousel slide" data-ride="carousel">

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% features.each_with_index do |feature, index| %>
        <div class="item <%= index == 0 ? 'active' : '' %> feature <%= feature.style? ? feature.style : '' %>">
          <% if feature.image_file_name.present? %>
            <%= image_tag feature.image.url, :class => 'img-responsive' %>
          <% end %>

          <div class="carousel-caption">
             <% if feature.display_title? %>
              <h3><%= feature.title %></h3>
            <% end %>

            <%= link_to tag(:span), feature.display_url %>

            <% if feature.display_body? %>
              <p><%= feature.body %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-casa-amarilla" role="button" data-slide="prev">
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-casa-amarilla" role="button" data-slide="next">
      <i class="fa fa-chevron-right" aria-hidden="true"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>